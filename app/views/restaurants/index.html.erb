<div class="text-center">
  <h2>Restaurants</h2>
  <% count = 1 %>
  <% @restaurants.each do |restaurant| %>
    <h3><%= count %> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h3>

    <% count += 1 %>
  <% end %>
</div>

